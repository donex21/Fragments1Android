<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InputFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modify Item Price"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="italic|bold"
            android:layout_marginBottom="16sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Item Code"
            android:textAlignment="center"
            android:textSize="16sp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:id="@+id/spinner_codes"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:textAlignment="center"
            android:layout_marginBottom="16sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Input New Unit Price"
            android:textAlignment="center"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30sp"
            android:layout_marginStart="30sp"
            android:id="@+id/new_Item_price"
            android:textAlignment="center"
            android:textSize="16sp"
            android:inputType="number"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/submit_new_price_btn"
            android:background="#4281e5"
            android:text="Submit New Price"
            android:textSize="16sp"
            android:textColor="#fff"
            android:layout_marginTop="20sp"/>
    </LinearLayout>

</FrameLayout>